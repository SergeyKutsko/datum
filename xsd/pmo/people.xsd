<xs:schema version="SNAPSHOT" xmlns:xs="http://www.w3.org/2001/XMLSchema"
    elementFormDefault="qualified" attributeFormDefault="unqualified">
    <xs:complexType name="user">
        <xs:sequence>
            <xs:element name="created" minOccurs="1" maxOccurs="1" type="xs:dateTime"/>
            <xs:element name="prefix" minOccurs="0" maxOccurs="1">
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:pattern value="users/[0-9]{4}/[0-9]{2}/[A-Z0-9]{9,}/"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="link" minOccurs="0" maxOccurs="unbounded">
                <xs:complexType>
                    <xs:simpleContent>
                        <xs:extension base="xs:string">
                            <xs:attribute name="rel" use="required" type="xs:string"/>
                            <xs:attribute name="href" use="required" type="xs:string"/>
                        </xs:extension>
                    </xs:simpleContent>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
        <xs:attribute name="id" use="required">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:pattern value="[A-Z0-9]{9,}"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
    </xs:complexType>
    <xs:element name="people">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="user" type="user" minOccurs="0" maxOccurs="unbounded">
                    <xs:unique name="userLink">
                        <xs:selector xpath="link" />
                        <xs:field xpath="@rel" />
                    </xs:unique>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
        <xs:unique name="uniqueID">
            <xs:selector xpath="user" />
            <xs:field xpath="@id" />
        </xs:unique>
        <xs:unique name="uniquePrefix">
            <xs:selector xpath="user" />
            <xs:field xpath="prefix" />
        </xs:unique>
    </xs:element>
</xs:schema>
